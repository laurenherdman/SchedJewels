<div class="row" id="proposal_show">
	<div class="col-xs-3" id="sidebar">
		<div class="user_holder">
			<p id="user_name"> <%= current_user.name %> </p>
			<div id="img_holder">
				<img id="user_image" src="https://placehold.it/100x100">
			</div>
		</div>
		<div class="sidebar_option">
			<a href="/events" class="option_text" id="toption">My Calendar</a>
		</div>
		<div class="sidebar_option">
			<a href='/proposals/new' class="option_text" id="toption">Create An Event</a>
		</div>
		<div class="sidebar_option">
			<a href='/proposals' class="option_text" id="toption">View Events</a>
		</div>
		<div class="sidebar_option">
			<a href='' class="option_text" id="toption">Partner/Group</a>
		</div>
	</div>

	<div class="col-xs-9" id="proposal_show_container">
		<h1 class="page_header"> Details for <%= @proposal.title.capitalize %></h1>
		<div>
	<div container="proposal_info">
		<h1 class="prop_title"><%= @proposal.title %></h1>
		<p class="location"><%= @proposal.location %> </p>
		<p class="prop_description"><%= @proposal.description %></p>

	<div class="potential_timeslots">
		<% @proposal.timeslots.each do |t| %>
			<div class="a_proposal">
				<p class="prop_date"><%= t.start_date.strftime("%b. %d, %Y") %>, <%= t.start_time.strftime("%I:%M %p") %>-<%= t.end_time.strftime("%I:%M %p")  %></p>
				
				<%= form_for [@proposal, t, Vote.new] do |f| %>
					<%= f.submit "Vote" %>
				<% end %>		
			</div>
		<% end %>
		<%= button_to "Create Event", events_path(:timeslot => @proposal.winning_timeslot), :method => :create %>
	</div>
</div>

<div>
	<h3>Comments:</h3>

			<ul>
				<% @proposal.comments.each do |comment| %>
				<li><% comment_user = comment.user.name %>
				<p> <%= comment_user %> Says:</p>
				<%= comment.body_text %></li>
			<% end %>
		</ul>
	</div>

		<%= render partial: 'comments/comment_form' %>

</div>
	</div>

